extends layout

block content
    h1 Companies

    if companies.length
        p Here are the current companies:
        ul.companies
            for company in companies
                li.company
                    a(href='/companies/#{company.id}') #{company.name}
    else
        p There are no companies currently.

    form(action='', method='POST')
        p Create a new company:
        input(type='text', name='name', placeholder='Name', required)
        input(type='submit', value='Create')
